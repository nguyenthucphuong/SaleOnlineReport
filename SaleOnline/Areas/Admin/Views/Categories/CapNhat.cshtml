@model Category
@{
    ViewData["Title"] = "CapNhat";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutDashboard.cshtml";
}


    <div class="single-product-tab-area mg-b-30">
        <!-- Single pro tab review Start-->
        <div class="single-pro-review-area">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="review-tab-pro-inner">

                            @if (TempData["Message"] != null)
                            {
                                <div class="alert alert-success">
                                    @TempData["Message"]
                                </div>
                            }
                            <form id="myForm" asp-area="Admin" asp-controller="Categories" asp-action="CapNhat" method="post">
                                <div id="myTabContent" class="tab-content custom-product-edit">
                                    <div class="product-tab-list tab-pane fade active in" id="description">
                                        <div class="row">
                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                <div class="review-content-section">

                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i class="icon nalika-new-file" aria-hidden="true"></i></span>
                                                        <input type="text" class="form-control" id="categoryId" placeholder="Id" name="categoryId" value="@Model.CategoryId" aria-describedby="text" style="background-color: #1b2a47;" readonly>
                                                    </div>
                                                    <div class="input-group mg-b-pro-edt">
                                                        <span class="input-group-addon"><i class="icon nalika-edit" aria-hidden="true"></i></span>
                                                    <input type="text" class="form-control" id="categoryName" placeholder="Name" name="categoryName" value="@(Model?.CategoryName ?? "")" aria-describedby="text" oninvalid="this.setCustomValidity('Vui lòng nhập tên!')" oninput="this.setCustomValidity('')" required>
                                                    </div>
                                                    <div class="input-group mg-b-pro-edt form-check">
                                                        <input class="form-check-input" type="checkbox" @(Model?.IsActive == true ? "checked" : "") name="kichhoat" id="kichhoat">
                                                        <label class="form-check-label" for="kichhoat" style="color: white; margin-left: 10px;"> Kích hoạt</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="text-center custom-pro-edt-ds">
                                                    <button type="submit" id="themgiohang" class="btn btn-ctl-bt waves-effect waves-light m-r-10" data-bs-toggle="modal" data-bs-target="#errorModal">Save</button>
                                                   
                                                <button type="reset" class="btn btn-ctl-bt waves-effect waves-light" value="Reset">
                                                    Reset
                                                </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    



