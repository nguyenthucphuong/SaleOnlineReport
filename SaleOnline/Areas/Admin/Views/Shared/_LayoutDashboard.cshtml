     <script>
        // Thông báo TempData["Message"] bằng Modal
        $(document).ready(function () {
            var message = '@(TempData["Message"] != null ? Html.Raw(JsonConvert.SerializeObject(TempData["Message"])) : "")';
            if (message !== '') {
                message = message.replace(/"/g, '');
                $("#message-content").text(message);
                $("#message-modal").modal('show');
                setTimeout(function () {
                    $("#message-modal").modal('hide');
                }, 2000);
            }
        });
        function showModal(message) {
            $('#modalMessage').text(message);
            $('#myModal').modal('show');
        }
// Báo hiệu dòng nào đã được cập nhật
        $(document).ready(function () {
            var tickRow = document.getElementById("tickRow");
            if (tickRow) {
                tickRow.scrollIntoView({ block: "center" });
                var borderColor = "red";
                var interval = setInterval(function () {
                    tickRow.style.borderColor = borderColor;
                    borderColor = borderColor === "red" ? "" : "red";
                }, 500);
                setTimeout(function () {
                    clearInterval(interval);
                    tickRow.style.borderColor = "";
                }, 6000);
            }

        });
// Sort tiêu đề cột của bảng
        function customSort(sortName, sortOrder, data) {
            var order = sortOrder === 'desc' ? -1 : 1;
            if (sortName === 'status') {
                sortName = 'isActive';
            }
            data.sort(function (a, b) {
                var aa = a[sortName];
                var bb = b[sortName];
                if (typeof aa === 'string' && !isNaN(aa)) {
                    aa = +aa;
                }
                if (typeof bb === 'string' && !isNaN(bb)) {
                    bb = +bb;
                }
                if (typeof aa === 'string') {
                    aa = aa.toLowerCase();
                }
                if (typeof bb === 'string') {
                    bb = bb.toLowerCase();
                }
                if (aa < bb) {
                    return order * -1;
                }
                if (aa > bb) {
                    return order;
                }
                return 0;
            });
        }
    </script>


    
